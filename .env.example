# =========================================
# TRAVEL COMPANY - ENVIRONMENT CONFIGURATION
# =========================================
# Copy this file to .env and fill in your values

# Flask Environment
FLASK_ENV=development
FLASK_APP=app.py

# Security Keys
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-for-api-authentication

# Database Configuration
# Local Development (SQLite)
DATABASE_URL=sqlite:///app.db

# Production PostgreSQL (Render/Other)
# DATABASE_URL=postgresql://username:password@host:port/database

# Email Configuration (Flask-Mail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@travelcompany.com

# Admin Configuration
ADMIN_EMAIL=admin@travelcompany.com

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here

# WebSocket/Socket.IO Configuration
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/0
# For production: redis://your-redis-url

# File Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=3600

# CORS Configuration
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =========================================
# PRODUCTION NOTES
# =========================================
# For Render.com deployment:
# 1. Set FLASK_ENV=production
# 2. Use PostgreSQL DATABASE_URL
# 3. Enable SESSION_COOKIE_SECURE=True
# 4. Set proper CORS_ORIGINS
# 5. Configure Redis for Socket.IO if needed

# =========================================
# DEVELOPMENT SETUP
# =========================================
# python -m venv venv
# source venv/bin/activate  # Windows: venv\Scripts\activate
# pip install -r requirements.txt
